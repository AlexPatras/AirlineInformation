<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="600.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MainController">
   <children>
      <HBox alignment="CENTER" layoutY="14.0" prefHeight="800.0" prefWidth="1300.0" spacing="50.0">
         <children>
            <Button fx:id="registerFlightButton" mnemonicParsing="false" onAction="#switchToRegisterFlight" prefWidth="150.0" text="Register a flight" />
            <Button fx:id="mBoardButton" mnemonicParsing="false" onAction="#switchToMBoard" prefWidth="150.0" text="Management Board" />
            <Button fx:id="createBookingButton" mnemonicParsing="false" onAction="#switchToCreateBooking" prefWidth="150.0" text="Create booking" />
            <Button fx:id="addPlaneButton" mnemonicParsing="false" onAction="#switchToAddPlane" prefWidth="150.0" text="Add a plane" />
             <Button fx:id="startSalesButton" mnemonicParsing="false" onAction="#switchToStartSales" prefHeight="26.0" prefWidth="150.0" text="StartSales" />
            <Button fx:id="addAirportButton" mnemonicParsing="false" onAction="#switchToAddAirport" prefWidth="150.0" text="Add an airport" />
            <Button fx:id="discountsButton" mnemonicParsing="false" onAction="#switchToDiscounts" prefHeight="26.0" prefWidth="150.0" text="Discounts" />
         </children>
      </HBox>
   </children>
</AnchorPane>
